<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bayu.cvsuryakencana.UpdateDistributorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Update Distributor"
        android:id="@+id/textView54"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID :"
        android:id="@+id/textView55"
        android:layout_alignBottom="@+id/etIdD"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etIdD"
        android:layout_below="@+id/textView54"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etNameD2"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Distributor :"
        android:id="@+id/textView56"
        android:layout_alignBottom="@+id/etNameD2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNameD2"
        android:layout_below="@+id/etIdD"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView56" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat :"
        android:id="@+id/textView57"
        android:layout_alignBottom="@+id/etAddressD2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etAddressD2"
        android:layout_below="@+id/textView56"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView56" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kota :"
        android:id="@+id/textView58"
        android:layout_alignBottom="@+id/etCityD2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCityD2"
        android:layout_below="@+id/textView57"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etAddressD2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Telepon :"
        android:id="@+id/textView59"
        android:layout_alignBottom="@+id/etTelpD2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etTelpD2"
        android:layout_below="@+id/etCityD2"
        android:layout_alignEnd="@+id/etCityD2"
        android:layout_alignStart="@+id/etCityD2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Distributor"
        android:id="@+id/btnUpdateD"
        android:layout_below="@+id/etTelpD2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etTelpD2"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Distributor"
        android:id="@+id/btnDeleteD"
        android:layout_below="@+id/btnUpdateD"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnUpdateD" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:id="@+id/btnCancelD2"
        android:layout_below="@+id/btnDeleteD"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnDeleteD" />
</RelativeLayout>
