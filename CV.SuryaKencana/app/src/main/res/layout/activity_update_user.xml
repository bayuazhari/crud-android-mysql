<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bayu.cvsuryakencana.UpdateUserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Update User"
        android:id="@+id/textView39"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID :"
        android:id="@+id/textView40"
        android:layout_alignBottom="@+id/etIdU"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etIdU"
        android:layout_below="@+id/textView39"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView45"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama :"
        android:id="@+id/textView41"
        android:layout_alignBottom="@+id/etNameU2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNameU2"
        android:layout_below="@+id/etIdU"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etIdU" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:id="@+id/textView42"
        android:layout_alignBottom="@+id/etEmailU2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etEmailU2"
        android:layout_below="@+id/textView41"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etNameU2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username :"
        android:id="@+id/textView43"
        android:layout_alignBottom="@+id/etUsernameU2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etUsernameU2"
        android:layout_below="@+id/textView42"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etEmailU2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:id="@+id/textView44"
        android:layout_alignBottom="@+id/etPasswordU2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPasswordU2"
        android:layout_below="@+id/etUsernameU2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView45" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin :"
        android:id="@+id/textView45"
        android:layout_below="@+id/etPasswordU2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etPasswordU2"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/etAddressU2"
        android:layout_toEndOf="@+id/textView45"
        android:id="@+id/radioGroup3">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki-laki"
            android:id="@+id/radioButton3"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:id="@+id/radioButton4"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat :"
        android:id="@+id/textView46"
        android:layout_alignBottom="@+id/radioGroup3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etAddressU2"
        android:layout_below="@+id/etPasswordU2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:layout_alignStart="@+id/radioGroup3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kota :"
        android:id="@+id/textView47"
        android:layout_alignBottom="@+id/etCityU2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etCityU2"
        android:layout_below="@+id/radioGroup3"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/radioGroup3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Telepon :"
        android:id="@+id/textView48"
        android:layout_alignBottom="@+id/etTelpU2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etTelpU2"
        android:layout_below="@+id/etCityU2"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etCityU2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update User"
        android:id="@+id/btnUpdateUser"
        android:layout_below="@+id/etTelpU2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete User"
        android:id="@+id/btnDeleteUser"
        android:layout_below="@+id/btnUpdateUser"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnUpdateUser" />

</RelativeLayout>
